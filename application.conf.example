migration {
  source-dir = "/path/to/cobol-source"
  output-dir = "/path/to/java-output"

  # Provider-agnostic AI configuration
  ai {
    provider = "openai"
    model = "gpt-4o"
    base-url = "https://api.openai.com/v1"
    api-key = ${?OPENAI_API_KEY}
    timeout = 90s
    max-retries = 3
    temperature = 0.1
    max-tokens = 32768
    requests-per-minute = 60
    burst-size = 10
    acquire-timeout = 30s
  }

